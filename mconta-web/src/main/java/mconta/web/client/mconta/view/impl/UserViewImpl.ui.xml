<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:mconta.web.client.mconta.ui"
	xmlns:f="urn:import:mconta.web.client.mconta.view">
	<ui:with field="i18n" type="mconta.web.client.i18n.AppConstants" />
	<ui:style>
		.panel {
			padding: 25px;
		}
		.form {
			background: #eee;
		}
	</ui:style>
	
	<g:HTMLPanel>
	
		<g:HorizontalPanel width="100%">
		
			<g:cell>
				
				<g:VerticalPanel width="300px" styleName="{style.panel} {style.form}">
					<g:HorizontalPanel>
					
						<g:VerticalPanel>
							<g:Label text="{i18n.form_label_use_name}" />
							<g:TextBox ui:field="use_name"/>
							<g:Label text="{i18n.form_label_use_password}" />
							<g:PasswordTextBox ui:field="use_password" />
	
							<g:HorizontalPanel>						
								<g:Label text="{i18n.form_label_use_enabled}" />
								<g:CheckBox ui:field="use_enabled"/>
							</g:HorizontalPanel>
						</g:VerticalPanel>
									
						<g:VerticalPanel>
							<g:Label text="{i18n.form_label_use_roles}" />
							<c:ObjectListBox ui:field="use_roles"/>
						</g:VerticalPanel>
						
					</g:HorizontalPanel>
					
					<g:Button ui:field="submitButton" text="{i18n.common_form_button_submit}"/>
					
				</g:VerticalPanel>
						
			</g:cell>
			
			<g:cell width="100%">
				<g:VerticalPanel width="100%" styleName="{style.panel}">
					<c:AppCellTable ui:field="appCellTable"/>
				</g:VerticalPanel>
			</g:cell>
		
		</g:HorizontalPanel>
		
	</g:HTMLPanel>
	
</ui:UiBinder> 